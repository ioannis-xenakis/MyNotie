<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="floatingActionButtonStyle">@style/Widget.Design.FloatingActionButton</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimarySurface">@color/black</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/lighter_black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorError">@color/white</item>
        <item name="dividerColor">@color/grey</item>
        <item name="tickColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.MyNotie.Subtitle1</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.MyNotie.Subtitle1</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="popupMenuBackground">@drawable/popup_menu_background</item>
        <item name="chipStyle">@style/ChipStyle</item>
        <item name="chipGroupStyle">@style/ChipGroupStyle</item>
        <item name="actionOverflowButtonStyle">@style/overflowButtonStyle</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/CheckBoxThemeOverlayStyle</item>
    </style>

    <style name="CheckBoxThemeOverlayStyle" parent="">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="overflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/more_vert</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/ChipTextAppearance</item>
        <item name="shapeAppearance">@style/ChipShapeAppearance</item>
        <!-- "EnsureMinTouchTargetSize = false", disables/removes the unnecessary space from top and bottom chip.
        That space is for ensuring the touch space size is not too small for user to tap.
        Although in this case tap space is not needed, thus I removed that space. -->
        <item name="ensureMinTouchTargetSize">false</item>
    </style>

    <style name="ChipGroupStyle" parent="Widget.MaterialComponents.ChipGroup">
        <item name="chipSpacingHorizontal">3dp</item>
        <item name="chipSpacingVertical">3dp</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/segoe_ui_light</item>
    </style>

    <style name="ChipShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
    </style>

    <style name="ShapeAppearance.Notes.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">27dp</item>
    </style>

    <style name="ShapeAppearance.NoteEdittext.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">27dp</item>
        <item name="cornerSizeBottomRight">27dp</item>
        <item name="cornerSizeTopLeft">27dp</item>
        <item name="cornerSizeTopRight">27dp</item>
    </style>

    <style name="ShapeAppearance.Edittext.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name='cornerFamily'>rounded</item>
        <item name="cornerSizeBottomLeft">9dp</item>
        <item name="cornerSizeBottomRight">9dp</item>
        <item name="cornerSizeTopLeft">9dp</item>
        <item name="cornerSizeTopRight">40dp</item>
    </style>

    <style name="TextAppearance.MyNotie.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/segoe_ui_regular</item>
        <item name="android:fontFamily">@font/segoe_ui_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TitleTextAppearance</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/segoe_ui_bold</item>
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FontStyleSegoeUIBold">
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
    </style>

</resources>